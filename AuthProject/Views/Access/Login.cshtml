@model AuthProject.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LOGIN ERP Bella Pintura</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: slategray;
            color: rgb(211, 211, 211);
            font-family: 'Lato', sans-serif;
        }

        .card {
            margin: auto;
            max-width: 400px;
            padding: 20px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            background-color: #e9ecef;
            border-radius: 20px;
            color: #333;
        }

        .btn {
            background-color: black;
            color: white;
        }

        img {
            width: 100px;
            display: block;
            margin: auto;
        }

        .gestao-empresarial {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
        }

        .manuscrita {
            font-family: 'Pacifico', cursive;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4 gestao-empresarial">Gestão Empresarial</h1>
    </div>

    <div class="container">
        <div class="card">
            <h2 class="text-center mb-4 manuscrita">ERP BELLA PINTURA</h2>
            <img src="~/Cadeado Fechado.png" />

            <p style="text-align: center;">Realize seu Login</p>

            <form asp-controller="Access" asp-action="Login" method="post">
                <input type="email" placeholder="Email" asp-for="Email" />
                <input type="password" placeholder="Senha" asp-for="PassWord" />

                <label>
                    <input type="checkbox" asp-for="KeepLoggedIn" />
                    Mantenha-me conectado.
                </label>
                <button type="submit" class="btn btn-primary btn-block">Login</button>

                @if (ViewData["ValidateMessage"] != null)
                {
                    <br />
                    <br />
                    <label>@ViewData["ValidateMessage"]</label>
                }
            </form>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
